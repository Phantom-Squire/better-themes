/**
 * @name TrueLight
 * @author Gibbu#1211
 * @version 1.0.0
 * @description Makes Discord's light theme a real light theme with a couple of minor changes. Light theme is needed to work properly. Customizable via variable settings inside the file.
 * @source https://github.com/Gibbu/BetterDiscord-Themes/tree/master/TrueLight
 * @website https://gibbu.me/
*/
/*
    This theme was inspired by this: https://www.reddit.com/r/discordapp/comments/bebcmn/i_remade_light_theme_so_its_more_uniform_and/
*/

@import url("https://gibbu.github.io/BetterDiscord-Themes/TrueLight/base.css");

:root {
    /* The height will affect how many emoji's you can see at once */
    --emojiPickerHeight: 224px; /* Default: 224px */

    /* This effects the following scrollbars: Chat, EmojiPicker, Pinned Messages ect... */
    --scrollbarColour: #43b581;

    /* 300 = thin | 400 = regular | 500 = semi-bold | 600 = bold | 700 = extra-bold */
	/* Want more options? Ask me on Discord @Gibbu#1211 */
    --chatTextThickness: 500;
    --chatUsernameThickness: 500;
    --chatTimestampThickness: 500;
    --chatCodeBlockThickness: 500;

    --membersRoleThickness:500;
    --membersMemberThickness: 500;
    --membersPlayingThickness: 500;

    --channelCategoryThickness: 600;
    --channelNormalThickness: 500;
    --channelSelectedThickness: 600;

    --tooltipsTextThickness: 600;

    /* Recolours any button with the blurple colour */
    --blurpleButtonColour: #777;
    --blurpleButtonColourHover: #677bc4;

    /* Settings Sidebar */
    --settingsSBHeaderThickness: 700;
    --settingsSBMenuButtonThickness: 600;

    /* Settings General */
    --settingsHeaderThickness: 700;
    --settingsSubHeaderThickness: 600;
    --settingsTextThickneess: 500;

    /* If you want to make them brighter or darker use this website: https://www.hexcolortool.com/ */
    /* Put the HEX value into "Enter a color:" and click either "Lighten" or "Darken" and on the right will be the results */

    /* BACKGROUND COLOURS */
    --bg0: #070707 !important;
    --bg1: #4c4c4c !important;
    --bg2: #676767 !important;
    --bg3: #959595 !important;
    --bg4: #c7c7c7 !important;
    --bg5: #d8d8d8 !important;
    --bg6: #e1e1e1 !important;
    --bg7: #ececec !important;
    --bg8: #f5f5f5 !important;

    /* TEXT COLOURS */
    --c1: #000 !important;
    --c2: #444 !important;
    --c3: #666 !important;
    --c4: #888 !important;
    --c5: #aaa !important;
    --c6: #bbb !important;

    /* Vague explaination of what each background variable is assigned to */
    /* --bg0 = Selected Server */
    /* --bg1 = Nothing */
    /* --bg2 = Watermark + Unread Server */
    /* --bg3 = No icon servers + transparent server icons */
    /* --bg4 = Selected text/voice channels */
    /* --bg5 = Guild/Server list background */
    /* --bg6 = Connection info + User details/buttons */
    /* --bg7 = Channels & Members List */
    /* --bg8 = Chat & Headers background */
}
